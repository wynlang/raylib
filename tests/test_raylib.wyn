// raylib package tests â€” headless (no window)

var KEY_SPACE = 32
var KEY_ESCAPE = 256
var KEY_UP = 265
var KEY_W = 87
var MOUSE_LEFT = 0

test "KEY_SPACE" {
    assert_eq(KEY_SPACE, 32)
}

test "KEY_ESCAPE" {
    assert_eq(KEY_ESCAPE, 256)
}

test "KEY_UP" {
    assert_eq(KEY_UP, 265)
}

test "KEY_W" {
    assert_eq(KEY_W, 87)
}

test "MOUSE_LEFT" {
    assert_eq(MOUSE_LEFT, 0)
}

test "rect collision true" {
    var ax = 10
    var ay = 10
    var aw = 50
    var ah = 50
    var bx = 30
    var by = 30
    var bw = 50
    var bh = 50
    assert(ax < bx + bw && ax + aw > bx && ay < by + bh && ay + ah > by)
}

test "rect collision false" {
    var ax = 10
    var ay = 10
    var aw = 50
    var ah = 50
    var cx = 200
    var cy = 200
    var bw = 50
    var bh = 50
    assert(!(ax < cx + bw && ax + aw > cx && ay < cy + bh && ay + ah > cy))
}

test "position after move" {
    var px = 100
    var py = 100
    px = px + 5
    py = py + -3
    assert_eq(px, 105)
    assert_eq(py, 97)
}

test "in bounds" {
    var px = 105
    var py = 97
    assert(px >= 0 && px < 800)
    assert(py >= 0 && py < 600)
}

test "frame time 60fps" {
    assert_eq(1000 / 60, 16)
}
